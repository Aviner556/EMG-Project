#ifndef _buzzer_
#define _buzzer_
#include "main.h"

typedef enum BUZZ_STATE_
{
	STATE_MUSIC_ON,
	STATE_MUSIC_OFF,
}BUZZ_STATE;

typedef struct BUZZER_
{
	BUZZ_STATE state;
	size_t size;
	int currentNote;
	int tone;
	int maxCount;
	int counter;
}BUZZER;

void buzzerInit(BUZZER *buzz);
void buzzerOnTimerInterrupt(BUZZER* buzz);
void playNote(int noteIdx);
void playNextNote();


#endif
