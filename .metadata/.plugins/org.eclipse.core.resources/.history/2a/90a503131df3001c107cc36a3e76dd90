#include "buttons.h"
#include "main.h"
#include "LED.h"

int delayTik = 0;

void buttInit(BUTTON* butt,GPIO_TypeDef* GPIOx, uint16_t GPIO_Pin)
{
	butt->butt_state = STATE_NONE;
	butt->tikOn = 0;
	butt->tikOff = 0;
	butt->timePass = 0;
	butt->countTik = 0;
	butt->GPIO_Pin = GPIO_Pin;
	butt->GPIOx = GPIOx;
}

void buttonInterrupt(BUTTON* butt)
{
	if(HAL_GPIO_ReadPin(GPIOx, GPIO_Pin) == 0){
		butt->tikOn = HAL_GetTick();
	}
	else if(HAL_GPIO_ReadPin(GPIOx, GPIO_Pin) == 1){
		butt->butt_state = STATE_PRESS;
		butt->tikOff = HAL_GetTick();
	}
}

void buttonOnTimerInterrupt(BUZZER* buzz)
{
	if(butt->butt_state == STATE_PRESS){
		butt->countTik++;
		if((HAL_GetTick() - butt->countTik) > 300){

		}
	}
}

